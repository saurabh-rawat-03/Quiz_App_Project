{
  "compilerOptions":{
    "target": "ES2017",
    "module": "CommonJS",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"]

  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}